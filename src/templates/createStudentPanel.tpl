<h2>Create/Update</h2>
<div class="row">
    <div class="input-obj col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <label for="#passport-input">Passport ID</label>
        <input type="number" id="passport-input" class="form-control" placeholder="Passport ID">
    </div>
    <div class="input-obj col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <label for="#first-name">First Name</label>
        <input type="text" id="first-name" class="form-control" placeholder="First Name" aria-describedby="basic-addon1">
    </div>
</div>
<div class="row">
    <div class="input-obj col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <label for="#last-name">Last Name</label>
        <input type="text" id="last-name" class="form-control" placeholder="Last Name" aria-describedby="basic-addon1">
    </div>
    <div class="input-obj col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <label for="#birth-date">Date of Birth</label>
        <input type="date" id="birth-date" class="form-control" placeholder="Birth Date" aria-describedby="basic-addon1">
    </div>
</div>
<div class="row">
    <div class="input-obj col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <label for="#coach-name">Name of the Coach/Trainer</label>
        <input type="text" id="coach-name" class="form-control" placeholder="Coach Name" aria-describedby="basic-addon1">
    </div>
    <div class="input-obj col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <label for="#achievement-level">Level to achieve</label>
        <input type="text" id="achievement-level" class="form-control" placeholder="Level to achieve" aria-describedby="basic-addon1">
    </div>
</div>
<div class="row">
    <div class="input-obj col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <label for="#seminar-payment">Seminar Cost</label>
        <input type="number" id="seminar-payment" class="form-control" placeholder="Seminar Payment" aria-describedby="basic-addon1">
    </div>
    <div class="input-obj col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <label for="#certification-payment">Certification Cost</label>
        <input type="number" id="certification-payment" class="form-control" placeholder="Certification Payment" aria-describedby="basic-addon1">
    </div>
</div>
<button type="button" id="saveBtn" class="btn-block btn-primary btn-lg">Save</button>